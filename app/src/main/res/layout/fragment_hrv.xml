<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/timestrap_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="29dp"
        android:text="time"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/RR_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RR"
        android:layout_marginLeft="@dimen/textView_margin"
        android:layout_alignBaseline="@+id/timestrap_textView"
        android:layout_alignBottom="@+id/timestrap_textView"
        android:layout_toRightOf="@+id/timestrap_textView"
        android:layout_toEndOf="@+id/timestrap_textView" />

    <TextView
        android:id="@+id/SD_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SD"
        android:layout_marginLeft="@dimen/textView_margin"
        android:layout_alignBaseline="@+id/RR_textView"
        android:layout_alignBottom="@+id/RR_textView"
        android:layout_toRightOf="@+id/RR_textView"
        android:layout_toEndOf="@+id/RR_textView" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/timestrap_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></android.support.v7.widget.RecyclerView>

</RelativeLayout>