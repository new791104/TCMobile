<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_layout">

    <TextView
        android:id="@+id/setting_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/title_margin"
        android:text="測量"
        android:textSize="24sp" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1060px"
        android:id="@+id/setting_spinner_Layout"
        android:background="@drawable/edge"
        android:layout_below="@id/setting_title_textView"
        android:layout_marginLeft="@dimen/textView_margin"
        android:layout_marginRight="@dimen/textView_margin"
        android:layout_marginTop="@dimen/textView_margin">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/detect_recyclerView">

        </android.support.v7.widget.RecyclerView>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>
